{{!
    @template local_musi/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "listheaderclass" : "listheaderclass",
       "cardheaderclass" : "cardheaderclass",
       "cardfooterclass" : "cardfooterclass",
       "cardimageclass" : "cardimageclass",
       "cardheader": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardbody": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardfooter": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardimage": [
            "value" : "value"
       ]
    }
}}

<div class="card border py-1 px-3 sk-fade ml-0 mr-0 mb-2 flex-md-row align-items-center row gx-0 shadow-sm" {{#datafields}} data-{{key}}="{{value}}" {{/datafields}}>
  <div class="content w-100">

    <div class="row foroptionid-{{#optionid}}{{#value}}{{.}}{{/value}}{{/optionid}}">
      {{#cardimage.value}}
      <div class="{{cardimageclass}} col-md-2">
        <img class="img-fluid rounded list-img" src="{{{value}}}">
      </div>
      <div class="col-md-10">
      {{/cardimage.value}}

        <div class="row">
          <div class="col-md-9">
            <div class="row">
              {{#top}}
              <div class="col-md-12 {{columnclass}}">
                <span {{^value}} style="display:none" {{/value}}>
                  {{#columniclassbefore}}<i class="{{.}}" aria-hidden="true"></i>{{/columniclassbefore}}
                </span>
                <span class="key {{columnkeyclass}}">
                  {{#keystring}}{{.}}{{/keystring}}{{^keystring}}{{{key}}}{{/keystring}}:
                </span>
                <span class="{{columnvalueclass}}">
                  {{{value}}}
                </span>
                <span {{^value}} style="display:none" {{/value}}>
                  {{#columniclassafter}}<i class="value {{.}}" aria-hidden="true"></i>{{/columniclassafter}}
                </span>
              </div>
              {{/top}}
            </div>

            <div class="row">
              {{#leftside}}
              <div class="col-md-12 {{columnclass}}">
                <span {{^value}} style="display:none" {{/value}}>
                  {{#columniclassbefore}}<i class="{{.}}" aria-hidden="true"></i>{{/columniclassbefore}}
                </span>
                <span class="key {{columnkeyclass}}">
                  {{#keystring}}{{.}}{{/keystring}}{{^keystring}}{{{key}}}{{/keystring}}:
                </span>
                <span class="{{columnvalueclass}}">
                  {{{value}}}
                </span>
                <span {{^value}} style="display:none" {{/value}}>
                  {{#columniclassafter}}<i class="value {{.}}" aria-hidden="true"></i>{{/columniclassafter}}
                </span>
              </div>
              {{/leftside}}
            </div>

            <div class="row">
              <div class="col-md-auto">
                <ul class="nav mb-2">
                  {{#info}}
                  <li class="nav-item pr-3">
                    <div class="d-flex align-items-center" {{#columnalt}}title="{{.}}"{{/columnalt}}>
                      <div class="mr-2 d-flex text-secondary font-size-m icon-uxs align-middle">
                        {{#columniclassbefore}}<i class="{{.}}  mt-auto mb-auto mr-1 fa-fw" aria-hidden="true"></i>{{/columniclassbefore}}
                        {{{value}}}
                        {{#columniclassafter}}<i class="value {{.}}" aria-hidden="true"></i>{{/columniclassafter}}
                      </div>
                    </div>
                  </li>
                  {{/info}}
                </ul>
              </div>
            </div>
          </div>

          <div class="col-md-3 d-flex flex-column p-0">
            {{#rightside}}
            <div class="col-md-12 {{columnclass}}">
              <span {{^value}} style="display:none" {{/value}}>
                {{#columniclassbefore}}<i class="{{.}}" aria-hidden="true"></i>{{/columniclassbefore}}
              </span>
              <span class="{{columnvalueclass}}">
                {{{value}}}
              </span>
              <span {{^value}} style="display:none" {{/value}}>
                {{#columniclassafter}}<i class="value {{.}}" aria-hidden="true"></i>{{/columniclassafter}}
              </span>
            </div>
            {{/rightside}}
          </div>
        </div>

      {{#cardimage.value}}
      </div>
      {{/cardimage.value}}
    </div>

  </div>
</div>

{{#js}}
{{^norecords}}
  require(['local_musi/easyavailabilitymodal'], function(fn) {
    fn.init(
      '{{#optionid}}{{#value}}{{{value}}}{{/value}}{{/optionid}}',
      'a.editavailability[data-optionid="{{#optionid}}{{#value}}{{{.}}}{{/value}}{{/optionid}}"]',
      '{{#str}} editavailabilityanddescription, local_musi {{/str}}',
    );
  });
{{/norecords}}
{{/js}}
